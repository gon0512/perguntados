<header class="container">
	<br>
	<h1>Responder</h1>
	<hr>
	<br>
</header>

<section class="container">
	<% resposta.forEach(item => { %>
		<div class="card shadow">
			<div class="card-header bg-warning">
				<h3><%= item.titulo %></h3>
			</div>
		
			<div class="card-body">
				<p class="lead"><%= item.pergunta %></p>
			</div>

			<div class="card-footer bg-transparent p-2">
				<p>Autor: <%=  item.nome %></p>
			</div>
		</div>
		<br>

	<% }) %>
</section>
<br>
<section class="container">
	<h1>Resposta</h1><br>
	<form action="/resposta" method="post" class="form-control shadow">
		<label for="" class="label-control">Autor da resposta:</label>
		<input type="text" class="form-control" name="autor"><br>
		<label for="" class="label-control">Resposta:</label>
		<textarea name="mensagem" id="" rows="6" class="form-control"></textarea><br>
		<% resposta.forEach(item => { %>
		<input type="hidden" name="pergunta" value="<%= item.id %>">
		<% }) %>
		<button class="btn btn-warning text-light">Responder</button>
	</form>
</section>
<br>

