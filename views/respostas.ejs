<%- include ('./partials/header.ejs'); %>

<body>

<%- include ('./partials/navbar.ejs'); %>

<header class="container">
	<br>
	<h1>Respostas</h1>
	<hr>
	<br>
</header>

<section class="container">
	<% perguntas.forEach(pergunta => { %>
		<div class="card shadow">
			<div class="card-header bg-warning">
				<h3><%= pergunta.titulo %></h3>
			</div>
		
			<div class="card-body">
				<p class="lead"><%= pergunta.pergunta %></p>
			</div>

			<div class="card-footer bg-transparent p-2">
				<p>Autor: <%=  pergunta.nome %></p>
				<a href="/verRespostas/<%= pergunta.id %>" class="btn btn-warning text-light">Ver Respostas</a>
			</div>
		</div>
		<br>

	<% }) %>
</section>

<footer class="bg-warning text-light text-center p-3">
	<p class="lead">Perguntados&copy; - 2021</p>
</footer>

</body>

<%- include ('./partials/footer.ejs'); %>